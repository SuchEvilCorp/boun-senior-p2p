{
  "name": "Peery",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Peer-to-peer resource sharing system",
  "homepage_url": "https://github.com/SuchEvilCorp/boun-senior-p2p",
  "icons": {
    "16": "icons/logo.png",
    "48": "icons/logo.png",
    "128": "icons/logo.png"
  },
  "default_locale": "en",
  "permissions": [
    "tabs",
    "system.cpu",
    "system.display",
    "system.memory",
    "system.network",
    "system.storage"
  ],
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "sandbox": {
    "pages": ["src/sandbox.html"]
  },
  "options_page": "src/options_custom/index.html",
  "browser_action": {
    "default_icon": "icons/logo.png",
    "default_title": "Peery",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "content_security_policy": "script-src 'self' 'unsafe-inline'; object-src 'self'"
}